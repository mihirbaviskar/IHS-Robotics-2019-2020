#include <PID.h>
#include <stdio.h>
#define sweeper 0
#define sweeperClaw 1
#define spaceshipJoint 2
#define spaceshipHead 3
#define TOPHATL 0
#define TOPHATR 1
#define black
#define white
#define forward true
#define backward false

//void simultaneous();
void lineCrossing(int tape);
void woopTyWoo(int degrees);
void goingOnATrip();
void inOurFavoriteRocketShip();

/* @function - 
** @param1 -
** @param2 -
*/


int main{
  //bring down sweeper
  enable_servos();
  /*thread nameHere;
  nameHere = thread_create(simultaneous);
  thread_start(nameHere);*/
  set_servo_postion(sweeperClaw,?);
  set_servo_position(sweeper,?);
  disable_servos();
  return 0;
}

/* @function - cross a certain # of black lines
** @param1 - how many tape to cross
** @param2 - which direction is it going
*/
void lineCrossing(int tape, boolean direction){
  int counter = 0;
  while(counter<tape){
    if(direction){
      while(TOPHATR < black){
        move_to(100,100,1);
        ao();
      }
      ao();
      while(TOPHATR > white){
        move_to(100,100,1);
        ao();
      }
      ao();
    }else{
      while(TOPHATR < black){
        move_to(-100,-100,1);
        ao();
      }
      ao();
      while(TOPHATR > white){
        move_to(-100,-100,1);
        ao();
      }
      ao();
    }
  }
  counter++;
}
  
/* @function - 
** @param1 -
** @param2 -
*/
void woopTyWoo(int degrees) {
  double conversion = degrees * 8.5;
  motor(left, 100);
  motor(right, -100);
  msleep(conversion);
}

void goingOnATrip(){
  //back up
  lineCrossing(2); //backup
  //adjust
  move_to(100,100,500); //adjust
  //claw close
  enable_servos();
  set_servo_postion(sweeperClaw,?);
  disable_servos();
  //bring claw/sweeper up
  set_servo_position(sweeper,?);
  //forward
  lineCrossing(1);
  //turn left
  firstTurn(90);
  //line follow till sensor black
  pid_one_sensor_forwards_till_black(black,75,5000,1);
  //turn left
  firstTurn(90);
  //line follow until in front of astronauts
  pid_one_sensor_forwards(black,75,3000,1);
  }
